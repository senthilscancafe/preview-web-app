<div class="app signin usersession">
    <div class="loginHeader">
        <div class="logo-img-box">
            <img src="{{imageBase}}pg-logo.png">
        </div>

        <ul class="nav navbar-nav navbar-right hidden-xs ">

            <li>
                <a href="javascript:;"  id="signupTop" class="ripple personalizedSignup" >
                    Signup
                </a>        
            </li>         
            <li>
                <a href="javascript:;"  class="link" >
                    |
                </a>        
            </li>         
            <li>
                <a href="javascript:;" id="loginTop" class="ripple actionText" data-toggle="layout-chat-open">
                    Login
                </a>
            </li>
        </ul>
    </div>
    <div class="session-wrapper">
        <div class="card bg-white no-border">
            <div class="text-center title-con">                
                <h4 class="modal-title text-center ">Account Login</h4>
            </div>
            <div class="row" style="margin:0px ">
                <div class="card no-border col-md-12 m-b clearfix" style="margin:0px;padding-top:20px;border-radius: 0px;box-shadow: none;" >
                    <div class="personalized">
                        <div class="col-xs-3 column p-l-0 p-r-0">
                            <img class="img-responsive" src="{{storyCover}}" alt="">
                        </div>
                        <div class="col-xs-9 column text-black p-r-0  personalized-detail">
                            <p> Your friend <span class="m-t-0"><b class="sharer-name">{{sharer}}</b></span>{{sharerText}}<b>{{storyName}}</b>. {{signInText}}</p>     
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-block">
                <form role="form" class="form-layout" id="login" action="/" style="padding-top: 0px;">                       
                    <div class="form-inputs autofill" id="log_input">
                        <!--<label class="text-uppercase">Your email address</label>-->
                        <input type="search"  class="form-control input-lg" id="emailOrMobile" style="background: transparent" value="{{login}}" placeholder="Email Address or Mobile" disabled required>
                        <span class="del">X</span>
                        <!--<label class="text-uppercase">Password</label>-->
                        <input type="password" class="form-control input-lg" id="password" placeholder="Password" required>
                        <div id="error" class="errorMessage"> </div>
                        <div class="form-group">
                            <div class="login-checkImg loginCheck active">
                                <input class="login-checkBox" type="checkbox"  checked="checked" id="loginCheck"  name="" />
                            </div>
                            <label for="loginCheck">Remember Me</label>
                            <div class="linkColor pull-right" id="forgotPassword">Forgot password?</div>
                        </div>

                    </div>

                    <button class="btn btn-primary btn-block btn-lg m-b bodyText" type="button" id="loginId">Login</button>
                    <div id="amazon-root"></div>
                    <div class="" style="height: 56px;">
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 hrOR pull-left"></div>
                        <div class="circleOR">OR</div>
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 hrOR pull-right"></div>
                    </div>
                    <div class="row" >
                       

                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <a class="btn btn-block btn-icon btn-facebook disabled" id="facebookLogin">
                                <i class="fa fa-facebook"></i> Login
                                <!--                                 <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
                                                        </fb:login-button>-->
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <a class="btn btn-block btn-icon btn-google disabled" id="googlePlusLogin">
                                <i><img src="{{imageBase}}googleplus.png" style="margin-top: -6px;"></i> Login
                            </a>
                        </div>
                         <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <a class="btn btn-block btn-icon btn-amazon disabled" id="amazonLogin">
                                <i class="fa fa-amazon"></i> Login                            
                            </a>
                        </div>
                    </div>                      

                    <div class="m-t"> <span id="acc">Don't have an account?</span> <a class="linkColor personalizedSignup" id="signUp">Signup</a></div>                            
                </form>
            </div>
        </div>
    </div>
</div>
<div id="messageModal" class="mobileFeature modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Photogurus</h4>
            </div>
            <div class="modal-body text-center">
                <p id="download_text">We couldnâ€™t log you in with your Facebook ID. In the next screen, please allow Photogurus to access your email address.</p>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-default ot-btn" id="reinitiateFBDialog" data-dismiss="modal" >OK</button>
            </div>

        </div>
    </div>
</div> 

            <div class="clearfix"></div>
            <div class="profile_fields_box other-box pull-left">
                <div class="field-row clearfix">
                    <div class="field-col1">
                        <span class="profile-icons password-icon"></span>
                    </div>
                    <div class="field-col2" id="changePasswordText">
                        {{changepassword}}
                    </div>
                    <div class="field-col3" id="changePassword">

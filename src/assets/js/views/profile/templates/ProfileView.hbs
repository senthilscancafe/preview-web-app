<div id="profileCropModal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="cropBack-container" data-dismiss="modal"><i class="cropBack"></i></button>
                <h4 class="modal-title text-center">Upload Profile Picture</h4>
            </div>
            <div class="modal-body text-center">
                <div>
                    <i class="dragImage"></i>
                    Drag the image to adjust the focus area
                </div>
                <div id="upload-demo"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="upload-result btn">Save</button>
            </div>
        </div>
    </div>
</div> 

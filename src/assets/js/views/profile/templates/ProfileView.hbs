                    <div class="field-col2" id="delete_account">
                        {{deleteAccount}}
                    </div>
                </div>

            </div>
            <div class="profile_fields_box other-box pull-right">
                <div class="field-row clearfix">
                    <div class="field-col1">
                        <span class="profile-icons logout-icon"></span>
                    </div>
                    <div class="field-col2-custom" id="logout">
                        {{Logout}}
                    </div>
                    <div class="field-col3-custom login-id">
                        {{email}}
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>

    </div>
</div>

